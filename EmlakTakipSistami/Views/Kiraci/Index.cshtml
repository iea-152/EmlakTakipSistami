@model IEnumerable<EmlakTakipSistami.Models.Kiraci>

<h3 class="mt-4 mb-3 text-center">Kiracı Listesi</h3>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var kiraci in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-info text-white">
                        @kiraci.AdSoyad
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <p><strong>Telefon:</strong> @kiraci.Telefon</p>
                        <p><strong>Doğum Tarihi:</strong> @(kiraci.DogumTarihi.HasValue? kiraci.DogumTarihi.Value.ToString("dd.MM.yyyy") : "-")</p>
                        <p><strong>Daire:</strong> @(kiraci.Daire != null ? kiraci.Daire.Il + ", " + kiraci.Daire.Ilce + " - " + kiraci.Daire.KiraUcreti + "₺" : "-")</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="@Url.Action("Edit", "Kiraci", new { id = kiraci.Id })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-center mt-4">Henüz kiracı eklenmemiş.</p>
    }
</div>
