@model List<EmlakTakipSistami.Models.Kiraci>

@{
    ViewData["Title"] = "Genel Bakış";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0 fw-bold text-dark">Genel Bakış</h4>
            
        </div>
        <div class="dropdown">
            <button class="btn btn-white shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-calendar-alt me-2 text-primary"></i>Bu Ay
            </button>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                            <i class="fas fa-building"></i>
                        </div>
                        <span class="badge bg-success bg-opacity-10 text-success trend-badge">
                            Aktif
                        </span>
                    </div>
                    <h6 class="text-muted mb-2">Toplam Daire</h6>
                    <h4 class="mb-3 fw-bold">@ViewBag.ToplamDaire</h4>
                    <div class="progress bg-primary bg-opacity-10">
                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-success bg-opacity-10 text-success">
                            <i class="fas fa-users"></i>
                        </div>
                        <span class="badge bg-primary bg-opacity-10 text-primary trend-badge">
                            Müşteriler
                        </span>
                    </div>
                    <h6 class="text-muted mb-2">Toplam Kiracı</h6>
                    <h4 class="mb-3 fw-bold">@ViewBag.ToplamKiraci</h4>
                    <div class="progress bg-success bg-opacity-10">
                        <div class="progress-bar bg-success" style="width: @(ViewBag.ToplamDaire > 0 ? (ViewBag.ToplamKiraci * 100 / ViewBag.ToplamDaire) : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                            <i class="fas fa-door-open"></i>
                        </div>
                        <span class="badge bg-danger bg-opacity-10 text-danger trend-badge">
                            Boşta
                        </span>
                    </div>
                    <h6 class="text-muted mb-2">Boş Daireler</h6>
                    <h4 class="mb-3 fw-bold">@ViewBag.BosDaire</h4>
                    <div class="progress bg-warning bg-opacity-10">
                        <div class="progress-bar bg-warning" style="width: @(ViewBag.ToplamDaire > 0 ? (ViewBag.BosDaire * 100 / ViewBag.ToplamDaire) : 0)%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-info bg-opacity-10 text-info">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <span class="badge bg-success bg-opacity-10 text-success trend-badge">
                            Aylık Tahmini
                        </span>
                    </div>
                    <h6 class="text-muted mb-2">Aylık Kira Geliri</h6>
                    <h4 class="mb-3 fw-bold text-success">@ViewBag.ToplamGelir.ToString("N0") ₺</h4>
                    <div class="progress bg-info bg-opacity-10">
                        <div class="progress-bar bg-info" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between">
                    <h5 class="card-title fw-bold mb-0">Son Eklenen Kiracılar</h5>
                    <a href="/Kiraci/Index" class="btn btn-sm btn-light text-primary">Tümünü Gör</a>
                </div>
                <div class="card-body px-4">
                    <div class="list-group list-group-flush">

                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <div class="list-group-item border-0 d-flex align-items-center px-0 py-3 border-bottom">
                                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="fas fa-user-check text-primary fa-lg"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold">@item.AdSoyad</h6>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-home me-1"></i>
                                            @(item.Daire != null ? item.Daire.DaireAdi + " (" + item.Daire.Ilce + ")" : "Daire Bilgisi Yok")
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <span class="d-block fw-bold text-dark">@item.Telefon</span>
                                        <small class="text-muted">ID: #@item.Id</small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="fas fa-info-circle mb-2"></i>
                                <p>Henüz kayıtlı kiracı bulunmuyor.</p>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>